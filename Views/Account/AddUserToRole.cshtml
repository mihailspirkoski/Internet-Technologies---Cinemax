@model Cinemax.Models.AddToRoleModel
@{
    ViewBag.Title = "AddUserToRole";
}

<h2>Add User To Role</h2>

@using (Html.BeginForm("AddUserToRole", "Account"))
{
    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder="Enter User's email" })
    </div>

    <div class="form-group">
        @Html.DropDownListFor(m => m.Role, new SelectList(Model.roles), new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}