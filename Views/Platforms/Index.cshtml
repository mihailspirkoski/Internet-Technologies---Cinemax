@model List<Cinemax.Models.Platform>

@{
    ViewBag.Title = "Index";
}

<div class="container" style="margin-bottom: 30px">
    <div>
        @Html.ActionLink("Add New Platform", "Create", new { area = "" }, new { @class = "btn btn-success" })
    </div>

    @for (int i = 0; i < Model.Count; i++)
    {
        var item = Model[i];

        if (i % 3 == 0)
        {
            @:<div class="row" style="margin-top: 20px">
            }


            <div class="col-md-3" style="margin-right: 80px; background-color: darkslategrey; border: 2px solid firebrick; color: black">
                <card style="width: 18rem; height: 30rem;">
                    <img class="card-img-top" src="@item.PlatformImage" style="height: 200px; width: 260px" alt="Image" />
                    <div class="card-body" style="background-color: darkslategrey">

                        <h3 class="card-title">@item.PlatformName</h3>
                        <a href="@item.PlatformAddress">@item.PlatformAddress</a>
                        <p style="visibility: hidden">.</p>


                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        @Html.ActionLink("List of Movies", "Details", new { id = item.Id }, new { @class = "btn btn-info" })
                        <p style="visibility: hidden">.</p>



                    </div>

                    <div class="card-footer text-center" style="background-color: darkslategrey; color: black;">
                        @Html.ActionLink("Add Movie To Platform", "AddAMovieToPlatform", new { id = item.Id }, new { @class = "btn btn-default text-left", @style="color: darkblue;" })
                        @Html.ActionLink("Delete Movie From Platform", "DeleteMovieFromPlatform", new { id = item.Id }, new { @class = "btn btn-default text-right", @style = "color: darkred; margin-top: 2px;" })
                    </div>
                </card>
            </div>



            if (i % 3 == 2)
            {
            @:</div>
        }
    }

</div>